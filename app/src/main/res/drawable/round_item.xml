<!-- rounded_edittext.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set the background color of the EditText -->
    <solid android:color="@color/white" />
    <corners android:radius="12dp" /> <!-- Set the radius for rounded corners (adjust as desired) -->
    <padding
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp" /> <!-- Set the padding around the EditText (adjust as desired) -->
    <stroke
        android:width="2dp"
        android:color="@color/black" />
</shape>
